{
  "name": "@grewer/tools",
  "version": "0.0.1",
  "description": "grewer's tools",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "microbundle": "^0.12.4"
  },
  "files": [
    "src",
    "dist"
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.6.0",
    "size-limit": "^4.6.0"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    }
  ],
  "scripts": {
    "pub": "npm publish --access public",
    "build": "microbundle  --no-sourcemap",
    "dev": "microbundle watch",
    "analyze": "size-limit --why",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "grewer"
  ],
  "author": "grewer",
  "license": "ISC"
}
