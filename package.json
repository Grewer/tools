{
  "name": "@grewer/tools",
  "version": "0.1.0",
  "description": "grewer's tools",
  "source": "index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@grewer/eslint": "^0.1.0",
    "@size-limit/preset-small-lib": "^4.6.0",
    "microbundle": "^0.12.4",
    "size-limit": "^4.6.0"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    }
  ],
  "scripts": {
    "pub": "rm -rf dist && microbundle  --no-sourcemap && npm config set registry https://registry.npmjs.org && npm publish --access public",
    "build": "rm -rf dist && microbundle  --no-sourcemap",
    "dev": "microbundle watch",
    "analyze": "size-limit --why"
  },
  "keywords": [
    "grewer"
  ],
  "author": "grewer",
  "license": "ISC",
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "./node_modules/@grewer/eslint"
    ]
  },
  "eslintIgnore": [
    "!.eslintrc.js",
    "!.prettierrc.js"
  ],
  "prettier": "@grewer/eslint/.prettierrc.js"
}
